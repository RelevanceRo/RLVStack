@page "/account/reset-password"
@layout Krafter.UI.Web.Client.Common.Components.Layout.AuthLayout
@using Krafter.Api.Client.Models
@using Krafter.UI.Web.Client.Features.Users
@using Krafter.UI.Web.Client.Common.Components.DaisyUI

<div class="grid grid-cols-12 gap-0 my-12 mx-auto rounded-box shadow-2xl overflow-hidden" style="width: 100%; max-width: 800px;">
    <div class="col-span-12 md:col-span-4">
        <RlvCard class="shadow-none rounded-none text-center p-12 h-full bg-gradient-to-br from-primary to-secondary text-primary-content">
            <h2 class="text-4xl font-bold mb-6">Welcome!</h2>
            <h6 class="text-lg mb-2">Join the world's largest community!</h6>
            <p class="text-sm">Let's get started with your <strong>30 days</strong> trial.</p>
        </RlvCard>
    </div>
    <div class="col-span-12 md:col-span-8">
        <RlvCard class="shadow-none rounded-none p-12 h-full">
            <h2 class="text-center text-2xl font-bold mb-6">Reset Password</h2>

            <EditForm Model="@ResetPasswordRequest" OnValidSubmit="@(() => ResetPassword(ResetPasswordRequest))" class="space-y-4">
                <FluentValidationValidator Options="@(options => options.IncludeAllRuleSets())" />

                <div class="form-control w-full">
                    <RlvLabel Text="Email" For="Email" />
                    <RlvInputField @bind-Value="@ResetPasswordRequest.Email"
                                   Placeholder="Enter your email address"
                                   Type="email"
                                   Name="Email"
                                   Class="w-full mt-1" />
                    <ValidationMessage class="text-sm text-error mt-1" For="@(() => ResetPasswordRequest.Email)" />
                </div>

                <div class="form-control w-full">
                    <RlvLabel Text="New Password" For="Password" />
                    <RlvInputField @bind-Value="@ResetPasswordRequest.Password"
                                   Placeholder="Enter new password"
                                   Type="password"
                                   Name="Password"
                                   Class="w-full mt-1" />
                    <ValidationMessage class="text-sm text-error mt-1" For="@(() => ResetPasswordRequest.Password)" />
                </div>

                <div class="flex justify-end mt-6">
                    <RlvButton Type="submit"
                               Size="ButtonSize.Medium"
                               Color="ButtonColor.Primary"
                               Disabled="@IsBusy"
                               Wide="true">
                        @if (IsBusy)
                        {
                            <span class="loading loading-spinner loading-sm"></span>
                            <span>Resetting...</span>
                        }
                        else
                        {
                            <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z" />
                            </svg>
                            <span>Reset Password</span>
                        }
                    </RlvButton>
                </div>
            </EditForm>
        </RlvCard>
    </div>
</div>

