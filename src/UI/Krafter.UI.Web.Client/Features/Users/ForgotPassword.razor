@page "/account/forgot-password"
@using Krafter.Api.Client.Models
@using Krafter.UI.Web.Client.Features.Users
@using Krafter.UI.Web.Client.Common.Components.DaisyUI

<div class="grid grid-cols-12 gap-0 my-12 mx-auto rounded-box shadow-2xl overflow-hidden" style="width: 100%; max-width: 800px;">
    <div class="col-span-12 md:col-span-4">
        <RlvCard class="shadow-none rounded-none text-center p-12 h-full bg-gradient-to-br from-primary to-secondary text-primary-content">
            <h2 class="text-4xl font-bold mb-6">Welcome!</h2>
            <h6 class="text-lg mb-2">Join the world's largest community!</h6>
            <p class="text-sm">Let's get started with your <strong>30 days</strong> trial.</p>
        </RlvCard>
    </div>
    <div class="col-span-12 md:col-span-8">
        <RlvCard class="shadow-none rounded-none p-12 h-full">
            <h2 class="text-center text-2xl font-bold mb-6">Forgot Password</h2>

            @if (MailSent)
            {
                <p class="text-base mb-6">
                    We have sent a password reset link to your email. Please check your inbox, as well as your spam or junk folder.
                </p>
            }
            else
            {
                <form @onsubmit="@(() => SendForgotPasswordMail(ForgotPasswordRequest))" class="flex flex-col gap-4">
                    <FluentValidationValidator Options="@(options => options.IncludeAllRuleSets())" />

                    <div class="grid grid-cols-12 gap-4 items-center">
                        <div class="col-span-12 md:col-span-2">
                            <RlvLabel Text="Email" For="Email" />
                        </div>
                        <div class="col-span-12 md:col-span-10">
                            <RlvInputField @bind-Value="@ForgotPasswordRequest.Email"
                                           Placeholder="Enter your email address"
                                           Type="email"
                                           class="w-full" />
                            <ValidationMessage class="text-sm text-error" For="@(() => ForgotPasswordRequest.Email)" />
                        </div>
                    </div>

                    <div class="flex flex-row justify-end gap-4 mt-8 mb-4">
                        <RlvButton Type="submit"
                                   Size="ButtonSize.Medium"
                                   Color="ButtonColor.Primary"
                                   Text="Submit"
                                   Disabled="@IsBusy">
                            @if (IsBusy)
                            {
                                <RlvLoading Size="LoadingSize.Small" />
                            }
                            else
                            {
                                <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 11V7a4 4 0 118 0m-4 8v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2z" />
                                </svg>
                            }
                        </RlvButton>
                    </div>
                </form>
            }
        </RlvCard>
    </div>
</div>