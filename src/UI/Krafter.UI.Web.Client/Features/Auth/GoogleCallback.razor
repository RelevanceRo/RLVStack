@page "/google-callback"
@using Krafter.UI.Web.Client.Common.Components.Brand
@rendermode @(new InteractiveWebAssemblyRenderMode(prerender: false))
<div class="rz-p-12 rz-text-align-center">
    <RadzenCard class="rz-shadow-3 rz-border-radius-4 rz-p-8" style="max-width: 400px; margin: 0 auto;">
        <RadzenStack Orientation="Orientation.Vertical" Gap="1rem" AlignItems="AlignItems.Center">
          <Logo Size="LogoSize.Small"></Logo>
            <RadzenText TextStyle="TextStyle.H5">Processing your login</RadzenText>
            <RadzenText TextStyle="TextStyle.Body1" class="rz-mb-4">Please wait while we authenticate your account...</RadzenText>
          <LoadingIndicator Size="LoadingIndicatorSize.Small"></LoadingIndicator>
        </RadzenStack>
    </RadzenCard>
</div>