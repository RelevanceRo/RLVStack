@page "/google-callback"
@using Krafter.UI.Web.Client.Common.Components.Brand
@rendermode @(new InteractiveWebAssemblyRenderMode(prerender: false))

<div class="p-12 text-center">
    <RlvCard Class="shadow-lg rounded-lg p-8 max-w-md mx-auto">
        <div class="flex flex-col gap-4 items-center">
            <Logo Size="LogoSize.Small"></Logo>
            <h2 class="text-2xl font-semibold">Processing your login</h2>
            <p class="text-base mb-4">Please wait while we authenticate your account...</p>
            <LoadingIndicator Size="LoadingIndicatorSize.Small"></LoadingIndicator>
        </div>
    </RlvCard>
</div>