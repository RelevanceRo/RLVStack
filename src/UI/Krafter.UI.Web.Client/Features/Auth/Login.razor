@page "/login"
@page "/Account/Login"
@using Krafter.Api.Client.Models
@using Krafter.UI.Web.Client.Common.Components.DaisyUI
@using Krafter.UI.Web.Client.Features.Auth

<div class="grid grid-cols-12 gap-0 my-12 mx-auto rounded-lg shadow-2xl overflow-hidden" style="max-width: 800px;">

    @if (IsMobileDevice == false)
    {
        <div class="col-span-12 md:col-span-4">
            <RlvCard class="shadow-none rounded-none text-center p-12 h-full bg-gradient-to-br from-primary to-secondary text-primary-content">
                <h2 class="text-4xl md:text-5xl font-bold mb-6">Welcome!</h2>
                <h3 class="text-xl">Join the world's largest community!</h3>
                <p class="text-sm mt-2">Let's get started with your <strong>30 days</strong> trial.</p>
            </RlvCard>
        </div>
    }

    <div class="col-span-12 md:col-span-8">
        <RlvCard Class="shadow-none rounded-none p-12">
            <h2 class="text-2xl font-semibold text-center mb-6">Login</h2>

            <div class="flex flex-col justify-center items-center">
                @if (themeManager.CurrentActive == ThemeManager.ThemePreference.Light)
                {
                    <img src="login-with-google-dark.svg"
                         @onclick="@StartGoogleLogin"
                         class="cursor-pointer transition-transform duration-200 hover:scale-105"
                         alt="Login with Google" />
                }
                else
                {
                    <img src="login-with-google-light.svg"
                         @onclick="@StartGoogleLogin"
                         class="cursor-pointer transition-transform duration-200 hover:scale-105"
                         alt="Login with Google" />
                }
            </div>

            <p class="text-center text-base my-4">Or</p>

            <EditForm Model="@TokenRequestInput" OnValidSubmit="@(() => CreateToken(TokenRequestInput))" class="space-y-3">
                <FluentValidationValidator Options="@(options => options.IncludeAllRuleSets())"/>

                <div class="grid grid-cols-12 gap-4 items-center">
                    <div class="col-span-12 md:col-span-2">
                        <RlvLabel Text="Email" For="Email"/>
                    </div>
                    <div class="col-span-12 md:col-span-10">
                        <RlvInputField @bind-Value="@TokenRequestInput.Email"
                                       Name="Email"
                                       Type="email"
                                       Placeholder="Enter your email"
                                       Class="w-full"/>
                        <ValidationMessage class="text-sm text-error" For="@(() => TokenRequestInput.Email)"/>
                    </div>
                </div>

                <div class="grid grid-cols-12 gap-4 items-center">
                    <div class="col-span-12 md:col-span-2">
                        <RlvLabel Text="Password" For="Password"/>
                    </div>
                    <div class="col-span-12 md:col-span-10">
                        <RlvInputField @bind-Value="@TokenRequestInput.Password"
                                       Name="Password"
                                       Type="password"
                                       Placeholder="Enter your password"
                                       Class="w-full"/>
                        <ValidationMessage class="text-sm text-error" For="@(() => TokenRequestInput.Password)"/>
                    </div>
                </div>

                <div class="flex justify-start">
                    <RlvLink Href="/account/forgot-password" Text="Forgot Password?" />
                </div>

                <div class="flex flex-row justify-end gap-4 mt-8 mb-4">
                    <RlvButton Type="submit"
                               Color="ButtonColor.Primary"
                               Size="ButtonSize.Medium"
                               Disabled="@isBusy"
                               Text="Login">
                        @if (!isBusy)
                        {
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1" />
                            </svg>
                        }
                        else
                        {
                            <RlvLoading Size="LoadingSize.Small" Class="mr-2" />
                        }
                    </RlvButton>
                </div>
            </EditForm>
        </RlvCard>
    </div>
</div>

