@using Krafter.Api.Client.Models
@using Krafter.UI.Web.Client.Common.Components.DaisyUI
@using Krafter.UI.Web.Client.Common.Permissions
@using Krafter.UI.Web.Client.Features.Auth._Shared
@using ButtonSize = Krafter.UI.Web.Client.Common.Components.DaisyUI.ButtonSize
@using ButtonColor = Krafter.UI.Web.Client.Common.Components.DaisyUI.ButtonColor
@using ButtonStyle = Krafter.UI.Web.Client.Common.Components.DaisyUI.ButtonStyle
@attribute [Route(RoutePath)]
@attribute [MustHavePermission(KrafterAction.View, KrafterResource.Roles)]

<AuthorizeView Policy="@(KrafterPermission.NameFor(KrafterAction.Create, KrafterResource.Roles))">
    <div class="flex flex-row gap-2.5 justify-end mt-2 mb-4">
        <RlvButton Size="ButtonSize.Small" Color="ButtonColor.Primary" Text="Add Role" OnClick="@AddRole">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
        </RlvButton>
    </div>
</AuthorizeView>

<RlvDataGrid TItem="RoleDto"
             Items="@(response?.Data?.Items ?? new List<RoleDto>())"
             TotalCount="@(response?.Data?.TotalCount ?? 0)"
             PageSize="@RequestInput.MaxResultCount"
             CurrentPage="@((RequestInput.SkipCount / RequestInput.MaxResultCount) + 1)"
             OnPageChanged="@OnPageChanged"
             OnPageSizeChanged="@OnPageSizeChanged"
             OnSortChanged="@OnSortChanged"
             OnFilterChanged="@OnFilterChanged"
             IsLoading="@IsLoading"
             ShowPagination="true"
             ShowPageSizeSelector="true">
    <Columns>
        <RlvDataGridColumn TItem="RoleDto" Property="@(nameof(RoleDto.Name))" Title="Name" Sortable="true" Filterable="true" FilterType="FilterType.Text" />
        <RlvDataGridColumn TItem="RoleDto" Property="@(nameof(RoleDto.Description))" Title="Description" Sortable="true" Filterable="true" FilterType="FilterType.Text" />
        <RlvDataGridColumn TItem="RoleDto" Property="@(nameof(RoleDto.CreatedById))" Title="Created By" Sortable="true" Filterable="true" FilterType="FilterType.Text" />
        <RlvDataGridColumn TItem="RoleDto" Title="Actions" Sortable="false" Filterable="false" Frozen="true" FrozenPosition="FrozenPosition.Right" Width="140px">
            <Template>
                @{
                    var data = context;
                    @if (KrafterRoleConstant.IsDefault(data.Name!) == false)
                    {
                        <RlvDropdown Position="DropdownPosition.BottomEnd">
                            <ButtonContent>
                                <RlvButton Size="ButtonSize.XSmall" Color="ButtonColor.Neutral" Variant="ButtonVariant.Outline" Text="Actions">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                    </svg>
                                </RlvButton>
                            </ButtonContent>
                            <Content>
                                <RlvMenu Size="MenuSize.Small" class="w-52">
                                    <AuthorizeView Policy="@(KrafterPermission.NameFor(KrafterAction.Update, KrafterResource.Roles))" Context="authContext">
                                        <RlvMenuItem OnClick="@(() => UpdateRole(data))">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                                            </svg>
                                            <span>Edit</span>
                                        </RlvMenuItem>
                                    </AuthorizeView>
                                    <AuthorizeView Policy="@(KrafterPermission.NameFor(KrafterAction.Delete, KrafterResource.Roles))" Context="authContext">
                                        <RlvMenuItem OnClick="@(() => DeleteRole(data))">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                            </svg>
                                            <span>Delete</span>
                                        </RlvMenuItem>
                                    </AuthorizeView>
                                </RlvMenu>
                            </Content>
                        </RlvDropdown>
                    }
                }
            </Template>
        </RlvDataGridColumn>
    </Columns>
</RlvDataGrid>
