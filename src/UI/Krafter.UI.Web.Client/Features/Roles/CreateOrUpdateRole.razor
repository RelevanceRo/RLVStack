@using Krafter.Api.Client.Models
@using Krafter.UI.Web.Client.Features.Roles
@using Krafter.UI.Web.Client.Features.Roles

<form @onsubmit="@((EventArgs __) => Submit(CreateUserRequest))" class="space-y-4">
    <FluentValidationValidator Options="@(options => options.IncludeAllRuleSets())"/>

    <!-- Name Field -->
    <div class="grid grid-cols-12 gap-4 items-center">
        <div class="col-span-12 md:col-span-4">
            <RlvLabel Text="Name" For="Name"/>
        </div>
        <div class="col-span-12 md:col-span-8">
            <RlvInputField @bind-Value="@CreateUserRequest.Name"
                          Name="Name"
                          Placeholder="Enter role name"
                          Disabled="!string.IsNullOrWhiteSpace(UserDetails.Id)"
                          class="w-full"/>
            <ValidationMessage style="font-size: 13px" For="@(() => CreateUserRequest.Name)"/>
        </div>
    </div>

    <!-- Description Field -->
    <div class="grid grid-cols-12 gap-4 items-center">
        <div class="col-span-12 md:col-span-4">
            <RlvLabel Text="Description" For="Description"/>
        </div>
        <div class="col-span-12 md:col-span-8">
            <RlvInputField @bind-Value="@CreateUserRequest.Description"
                          Name="Description"
                          Placeholder="Enter role description"
                          class="w-full"/>
            <ValidationMessage style="font-size: 13px" For="@(() => CreateUserRequest.Description)"/>
        </div>
    </div>

    <!-- Permissions Field (Only shown when editing) -->
    @if (!string.IsNullOrWhiteSpace(UserDetails.Id))
    {
        <div class="grid grid-cols-12 gap-4 items-start">
            <div class="col-span-12 md:col-span-4">
                <RlvLabel Text="Permissions" For="FinalPermission"/>
            </div>
            <div class="col-span-12 md:col-span-8">
                <div class="form-control w-full">
                    <select @bind="SelectedPermissions"
                            multiple
                            size="15"
                            class="select select-bordered w-full h-auto"
                            style="min-height: 300px;">
                        @if (GroupedData != null)
                        {
                            @foreach (var item in GroupedData)
                            {
                                @if (item.IsGroup)
                                {
                                    <optgroup label="@item.Resource" class="font-bold text-base-content"></optgroup>
                                }
                                else
                                {
                                    <option value="@item.FinalPermission"
                                            selected="@CreateUserRequest.Permissions.Contains(item.FinalPermission)"
                                            class="pl-4">
                                        @(item.Resource ?? item.FinalPermission)
                                    </option>
                                }
                            }
                        }
                    </select>
                    <label class="label">
                        <span class="label-text-alt">Hold Ctrl (Cmd on Mac) to select multiple permissions</span>
                    </label>
                </div>
            </div>
        </div>
    }

    <!-- Action Buttons -->
    <div class="flex flex-row justify-center gap-4 mt-8 mb-4">
        <RlvButton ButtonType="ButtonType.Submit"
                   Color="ButtonColor.Primary"
                   Size="ButtonSize.Medium"
                   Text="Save"
                   Disabled="@isBusy">
            @if (isBusy)
            {
                <RlvLoading Size="LoadingSize.XSmall" />
            }
            else
            {
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7H5a2 2 0 00-2 2v9a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-3m-1 4l-3 3m0 0l-3-3m3 3V4" />
                </svg>
            }
        </RlvButton>
        <RlvButton Color="ButtonColor.Neutral"
                   Variant="ButtonVariant.Ghost"
                   Size="ButtonSize.Medium"
                   Text="Cancel"
                   OnClick="@Cancel">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
        </RlvButton>
    </div>
</form>
