@using Krafter.Api.Client.Models
@using Krafter.UI.Web.Client.Common.Permissions
@using Krafter.UI.Web.Client.Features.Tenants
@using Krafter.UI.Web.Client.Common.Components.DaisyUI
@attribute [Route(RoutePath)]
@attribute [MustHavePermission(KrafterAction.View, KrafterResource.Tenants)]

<!-- Add Tenant Button -->
<AuthorizeView Policy="@(KrafterPermission.NameFor(KrafterAction.Create, KrafterResource.Tenants))">
    <div class="flex flex-row gap-2.5 justify-end mt-2 mb-4">
        <RlvButton Size="ButtonSize.Small" Color="ButtonColor.Primary" OnClick="@Add">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <circle cx="12" cy="12" r="10"></circle>
                <line x1="12" y1="8" x2="12" y2="16"></line>
                <line x1="8" y1="12" x2="16" y2="12"></line>
            </svg>
            Add Tenant
        </RlvButton>
    </div>
</AuthorizeView>

<!-- Tenants Data Grid -->
<RlvDataGrid TItem="TenantDto"
             Items="@response?.Data?.Items"
             TotalCount="@(response?.Data?.TotalCount ?? 0)"
             PageSize="@requestInput.MaxResultCount"
             IsLoading="@IsLoading"
             OnLoadData="@LoadData"
             AllowSorting="true"
             AllowFiltering="true"
             AllowPaging="true"
             EmptyMessage="No tenants found">
    <Columns>
        <!-- Name Column -->
        <RlvDataGridColumn TItem="TenantDto" Property="Name" Title="Name" Sortable="true" Filterable="true" FilterType="FilterType.Text"/>

        <!-- Identifier Column (with external link) -->
        <RlvDataGridColumn TItem="TenantDto" Property="Identifier" Title="Identifier" Sortable="true" Filterable="true" FilterType="FilterType.Text">
            <Template>
                @{
                    var remoteHostUrl = $"https://{context.Identifier}.{TenantInfo.MainDomain}";
                }
                <RlvLink Href="@remoteHostUrl" Target="_blank" class="link link-primary">
                    @context.Identifier
                </RlvLink>
            </Template>
        </RlvDataGridColumn>

        <!-- Admin Email Column -->
        <RlvDataGridColumn TItem="TenantDto" Property="AdminEmail" Title="Admin Email" Sortable="true" Filterable="true" FilterType="FilterType.Text"/>

        <!-- Valid Upto Column -->
        <RlvDataGridColumn TItem="TenantDto" Property="ValidUpto" Title="Valid Upto" Sortable="true" Filterable="true" FilterType="FilterType.Date">
            <Template>
                @if (context.ValidUpto.HasValue)
                {
                    @context.ValidUpto.Value.ToString("yyyy-MM-dd")
                }
            </Template>
        </RlvDataGridColumn>

        <!-- Is Active Column -->
        <RlvDataGridColumn TItem="TenantDto" Property="IsActive" Title="Is Active" Sortable="true" Filterable="true" FilterType="FilterType.Boolean">
            <Template>
                @if (context.IsActive == true)
                {
                    <RlvBadge Color="BadgeColor.Success" Text="Active"/>
                }
                else
                {
                    <RlvBadge Color="BadgeColor.Error" Text="Inactive"/>
                }
            </Template>
        </RlvDataGridColumn>

        <!-- Created By UserId Column -->
        <RlvDataGridColumn TItem="TenantDto" Property="CreatedById" Title="Created By" Sortable="true" Filterable="true" FilterType="FilterType.Text"/>

        <!-- Actions Column -->
        @if (EnableAction is true)
        {
            <RlvDataGridColumn TItem="TenantDto" Title="Actions" Sortable="false" Filterable="false" Frozen="true" FrozenPosition="FrozenPosition.Right" Width="150px">
                <Template>
                    <RlvDropdown class="dropdown-end">
                        <RlvButton Color="ButtonColor.Neutral" Variant="ButtonVariant.Ghost" Size="ButtonSize.Small">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <circle cx="12" cy="12" r="1"></circle>
                                <circle cx="12" cy="5" r="1"></circle>
                                <circle cx="12" cy="19" r="1"></circle>
                            </svg>
                            Actions
                        </RlvButton>
                        <RlvMenu Slot="content" class="w-52 bg-base-100 rounded-box shadow-lg">
                            <AuthorizeView Policy="@(KrafterPermission.NameFor(KrafterAction.Update, KrafterResource.Tenants))" Context="authContext">
                                <RlvMenuItem OnClick="@(() => Update(context))">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
                                        <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
                                    </svg>
                                    Edit
                                </RlvMenuItem>
                            </AuthorizeView>

                            <AuthorizeView Policy="@(KrafterPermission.NameFor(KrafterAction.Delete, KrafterResource.Tenants))" Context="authContext">
                                <RlvMenuItem OnClick="@(() => Delete(context))">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <polyline points="3 6 5 6 21 6"></polyline>
                                        <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
                                    </svg>
                                    Delete
                                </RlvMenuItem>
                            </AuthorizeView>
                        </RlvMenu>
                    </RlvDropdown>
                </Template>
            </RlvDataGridColumn>
        }
    </Columns>
</RlvDataGrid>
