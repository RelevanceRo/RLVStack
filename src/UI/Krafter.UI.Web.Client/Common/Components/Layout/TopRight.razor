            <RadzenSplitButton AlwaysOpenPopup=true Click=@(args => SplitButtonClick(args)) Text="@context.User.GetFullName()" Icon="account_circle" Style="margin-right: 4px">
                    <ChildContent>
                        <RadzenSplitButtonItem Text="Logout" Value="Logout" Icon="logout" />
                        <RadzenSplitButtonItem Text="Change Password" Value="ChangePassword" Icon="account_balance_wallet" />
                        <RadzenSplitButtonItem Text="Appearance" Value="Appearance" Icon="contrast" />
                    </ChildContent>
                </RadzenSplitButton>
