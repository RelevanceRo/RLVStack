@using Krafter.UI.Web.Client.Common.Components.DaisyUI
@using Krafter.UI.Web.Client.Common.Permissions
@using Krafter.UI.Web.Client.Common.Components.Layout
<AuthorizeView>
    <Authorizing>
        <text>Login...</text>
    </Authorizing>
    <Authorized>
        <div class="flex flex-col">
            <RlvDropdown HorizontalPlacement="DropdownHorizontalPlacement.End">
                <ButtonContent>
                    <button class="btn btn-ghost gap-2">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                        </svg>
                        <span>@context.User.GetFullName()</span>
                    </button>
                </ButtonContent>
                <Content>
                    <RlvMenu Class="bg-base-100 rounded-box w-52 p-2 shadow-lg">
                        <RlvMenuItem OnClick="@(() => OnMenuItemClick("ChangePassword"))">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z" />
                            </svg>
                            <span>Change Password</span>
                        </RlvMenuItem>
                        <RlvMenuItem OnClick="@(() => OnMenuItemClick("Appearance"))">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01" />
                            </svg>
                            <span>Appearance</span>
                        </RlvMenuItem>
                        <li class="my-1"><RlvDivider /></li>
                        <RlvMenuItem OnClick="@(() => OnMenuItemClick("Logout"))">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-error" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
                            </svg>
                            <span class="text-error">Logout</span>
                        </RlvMenuItem>
                    </RlvMenu>
                </Content>
            </RlvDropdown>

            @* @if (ShowProfileCard)
            {
                <RlvCard Class="my-12 mx-auto max-w-xs">
                    <div class="flex flex-row justify-start gap-4 p-4">
                        <img src="default-profile.jpg" class="w-25 h-25 rounded-full" alt="Profile" />
                        <div class="flex flex-col gap-0">
                            <span class="text-xs uppercase opacity-60 mt-2">Employee</span>
                            <span class="text-base font-bold">@(context.User.GetFullName())</span>
                            <span class="text-xs uppercase opacity-60 mt-4">Email</span>
                            <span class="text-base font-bold">@(context.User.GetEmail())</span>
                        </div>
                    </div>
                </RlvCard>
            } *@
        </div>
    </Authorized>
    <NotAuthorized>
        <RlvButton Style="Krafter.UI.Web.Client.Common.Components.DaisyUI.ButtonStyle.Ghost" OnClick="@HandleNavigateToLogin">
            <span>Login</span>
        </RlvButton>
    </NotAuthorized>
</AuthorizeView>